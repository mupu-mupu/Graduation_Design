<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:id="@+id/iv_search_cancle"
            android:src="@drawable/ic_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:text="添加城市"
            android:textSize="16sp"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />

        <View
            android:id="@+id/view_line"
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:background="#5F6163"
           android:layout_alignParentBottom="true"
            >
        </View>
    </RelativeLayout>

    <EditText
        android:hint="请输入城市名称"
        android:textColor="@color/color_white"
        android:id="@+id/et_activity_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:paddingStart="10dp"
        />

    <View
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="#5F6163"
        android:layout_marginTop="10dp"
        >
    </View>

    <TextView
        android:text="全部城市"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#5C5D5E"
        android:layout_marginStart="10dp"
        />


    <View
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="#5F6163"
        android:layout_marginTop="5dp"
        >
    </View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_search_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        >

    </ListView>

    <View
        android:layout_below="@id/lv_search_city"
        android:layout_height="1px"
        android:layout_width="fill_parent"
        android:background="#5F6163"
        android:layout_marginTop="5dp"
        >

    </View>

    <Button
        android:id="@+id/btn_search_city"
        android:text="搜索城市"
        android:textSize="15sp"
        android:layout_below="@id/lv_search_city"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape"
        />

    </RelativeLayout>


</LinearLayout>